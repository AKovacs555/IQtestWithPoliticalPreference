{
  "id": "https://example.com/question-set.schema.json",
  "type": "object",
  "required": ["id", "language", "title", "questions"],
  "properties": {
    "id": {"type": "string"},
    "language": {"type": "string"},
    "title": {"type": "string"},
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "question", "options", "answer", "irt"],
        "properties": {
          "id": {"type": "integer"},
          "question": {"type": "string"},
          "options": {
            "type": "array",
            "items": {"type": "string"},
            "minItems": 4,
            "maxItems": 4
          },
          "answer": {"type": "integer", "minimum": 0, "maximum": 3},
          "irt": {
            "type": "object",
            "properties": {
              "a": {"type": "number"},
              "b": {"type": "number"}
            },
            "required": ["a", "b"]
          }
        }
      }
    }
  }
}
